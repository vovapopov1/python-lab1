def count_words(text):
    words = text.lower().split()
    result = {}

    for word in words:
        if word in result:
            result[word] += 1
        else:
            result[word] = 1

    return result


text = "jabko jabko jabko jabko "
words_count = count_words(text)

print("Слова, які повторюються більше 3 разів")
for word in words_count:
    if words_count[word] > 3:
        print(word, "-", words_count[word])
